{
  "name": "geek-score",
  "version": "0.2.0",
  "author": "david_go__",
  "description": "A PWA for board games fans. It allows you to store your games, create teams and collect statistics.",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "chart.js": "^2.9.3",
    "core-js": "^3.4.4",
    "eslint": "^6.8.0",
    "firebase": "^7.7.0",
    "firebaseui": "^4.4.0",
    "flush-promises": "^1.0.2",
    "register-service-worker": "^1.6.2",
    "sw-precache": "^5.2.1",
    "vue": "^2.6.10",
    "vue-chartjs": "^3.5.0",
    "vue-meta": "^2.3.3",
    "vue-offline": "^2.0.8",
    "vue-router": "^3.1.3",
    "vuetify": "^2.3.0",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.4.5",
    "@vue/cli-plugin-eslint": "^4.4.5",
    "@vue/cli-plugin-pwa": "^4.4.5",
    "@vue/cli-plugin-router": "^4.4.5",
    "@vue/cli-plugin-unit-jest": "^4.4.5",
    "@vue/cli-plugin-vuex": "^4.4.5",
    "@vue/cli-service": "^4.4.5",
    "@vue/test-utils": "1.0.0-beta.31",
    "babel-eslint": "^10.0.3",
    "eslint-plugin-vue": "^5.0.0",
    "sass": "^1.26.8",
    "sass-loader": "^8.0.0",
    "sw-precache-webpack-plugin": "^1.0.0",
    "vue-cli-plugin-vuetify": "^2.0.6",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.5.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 10,
          "multiline": {
            "max": 10,
            "allowFirstLine": false
          }
        }
      ],
      "vue/singleline-html-element-content-newline": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
